
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <h2>Register !</h2>
        <form>
            <div class="form-group">
                <label for="SignUpLogin">UserName</label>
                <input type="text" class="form-control" id="SignUpLogin" aria-describedby="emailHelp" placeholder="Enter a username">
            </div>
            <div class="form-group">
                <label for="SignUpPassword">Password</label>
                <input type="password" class="form-control" name="password" id="SignUpPassword" placeholder="Enter a Password">
            </div>
            <div class="form-group">
                <label for="password2">Password</label>
                <input type="password" class="form-control" name="password2" id="password2" placeholder="Verify your Password">
            </div>
            <div class="form-check">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>

    </div>

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <h2>Already Registered ?</h2>
        <a asp-controller="Authentification" asp-action="SignIn"><button class="btn btn-primary">SignIn</button></a>

    </div>

</div>
